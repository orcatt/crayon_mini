/* pagesusertools/dict/index.wxss */
.mode {
  width: 90%;
  margin: auto;
  padding: 20rpx 0;
  overflow-y: auto;
  overflow-x: hidden;
}

.tabsList {
  width: 320rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
  background-color: #fff;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  margin: 40rpx auto; 
}

.tabsList>view {
  text-align: center;
  width: 100rpx;
  height: 70rpx;
  line-height: 76rpx;
  font-size: 32rpx;
  font-family: "DouyinSansBold";
  color: #09090b;
  transition: all 0.3s ease;
  transform: scale(1);
}

.tabsList>view.tabs_active{
  color: #fff;
  background-color: #18181b;
  border-radius: 20rpx;
  padding: 0 10rpx;
  transform: scale(1.2);
}


.modetitle {
  font-family: 'DouyinSansBold';
  position: relative;
  margin: 30rpx 0 10rpx 0;

}

.modetitle .top {
  height: 65rpx;
  font-size: 48rpx;
  color: #09090B;
}

.modetitle .bottom {
  height: 50rpx;
  font-size: 32rpx;
  color: #71717A;
}


.date-card {
  width: 100%;
  background: #F4F4F5;
  border-radius: 24rpx;
  padding: 40rpx;
  box-sizing: border-box;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 2px -2rpx rgba(0, 0, 0, 0.3);
}

