/* pagesusertools/dict/index.wxss */
.mode {
  width: 90%;
  margin: auto;
  overflow-y: auto;
  overflow-x: hidden;
}

.modetitle {
  font-family: 'DouyinSansBold';
  position: relative;
  margin: 30rpx 0 10rpx 0;
}

.modetitle .top {
  height: 65rpx;
  font-size: 48rpx;
  color: #09090B;
}

.modetitle .bottom {
  height: 50rpx;
  font-size: 32rpx;
  color: #71717A;
}

.title-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.clear-btn {
  font-size: 24rpx;
  color: #71717A;
  padding: 8rpx 20rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-top: 10rpx;
}

.coin-container {
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  perspective: 1000px;
}

.coin {
  width: 300rpx;
  height: 300rpx;
  position: relative;
  transform-style: preserve-3d;
  transition: transform 1s ease;
  cursor: pointer;
}

.coin-side {
  width: 100%;
  height: 100%;
  position: absolute;
  backface-visibility: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: #F4F4F5;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
}

.coin-side image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.coin-side.back {
  transform: rotateY(180deg);
}

.result-card {
  width: 100%;
  background: #18181B;
  border-radius: 24rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 2px -2rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 40rpx;
}

.result-title {
  font-size: 32rpx;
  color: #FFFFFF;
  font-family: 'DouyinSansBold';
  margin-bottom: 20rpx;
}

.result-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-item {
  display: flex;
  align-items: center;
}

.result-item .label {
  font-size: 28rpx;
  color: #71717a;
  width: 100rpx;
}

.result-item .value {
  font-size: 28rpx;
  color: #FFFFFF;
}