/* pages/today/index.wxss */

.mode {
	width: 100%;
	padding: 32rpx;
	box-sizing: border-box;
	background-color: #f4f4f5;
}

/* 用户卡片样式 */
.user-card {
	background: #ffffff;
	border-radius: 24rpx;
	padding: 32rpx;
	margin-bottom: 32rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.user-info {
	display: flex;
	align-items: center;
}

.avatar {
	width: 120rpx;
	height: 120rpx;
	border-radius: 60rpx;
	margin-right: 24rpx;
}

.user-detail {
	flex: 1;
}

.nickname {
	font-size: 36rpx;
	color: #09090B;
	font-weight: 600;
	margin-bottom: 8rpx;
}

.level {
	font-size: 28rpx;
	color: #71717a;
}

/* 菜单部分样式 */
.menu-section {
	background: #ffffff;
	border-radius: 24rpx;
	padding: 32rpx;
	margin-bottom: 32rpx;
}

.section-title {
	font-size: 32rpx;
	color: #09090B;
	font-weight: 600;
	margin-bottom: 24rpx;
}

.menu-list {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
}

.menu-item {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 24rpx;
	background: #f4f4f5;
	box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
	border-radius: 16rpx;
	transition: all 0.3s ease;
}

.menu-item:active {
	background: #e4e4e7;
}

.menu-item-left {
	display: flex;
	align-items: center;
	gap: 24rpx;
}

.menu-icon {
	width: 54rpx;
	height: 54rpx;
}

.menu-text {
	display: flex;
	flex-direction: column;
	gap: 4rpx;
}

.menu-title {
	font-size: 32rpx;
	color: #09090B;
	font-weight: 500;
}

.menu-desc {
	font-size: 24rpx;
	color: #71717a;
}

.arrow-icon {
	width: 32rpx;
	height: 32rpx;
}

/* 版本信息 */
.version-info {
	text-align: center;
	font-size: 24rpx;
	color: #71717a;
	padding: 32rpx 0;
}
