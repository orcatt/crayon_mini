}

/* 活动信息 */
.activity_info{
  width: 94%;
  height: 100rpx;
  background: #18181b;
  padding: 24rpx;
  box-sizing: border-box;
  border-radius: 24rpx 24rpx 0 0;
  margin: 30rpx auto 0 auto;
  box-shadow: 0 2px 4px rgba(0, 0, 0, 1), 0 10px 20px rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
}
.activity_info>view{
  width: calc(100% / 4);
  height: 100%;
  line-height: 56rpx;
  text-align: center;
  background: #ffffff;
  color: #09090B;
  font-size: 28rpx;
  font-family: 'DouyinSansBold';
  border-radius: 8rpx;
  box-shadow: 0 2px 4px rgba(0, 0, 0, 1), 0 10px 20px rgba(0, 0, 0, 0.4);
}

