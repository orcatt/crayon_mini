  font-size: 28rpx;
  color: #09090B;
}
.content-bottom-line>view>view:nth-child(2) text{
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
  margin-right: 10rpx;
  
}

.btn-sum{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}
.start-btn {
  width: calc(100% / 4 - 8rpx);
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #18181b;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 12rpx;
