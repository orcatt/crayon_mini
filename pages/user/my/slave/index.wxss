/* pages/explore/tools/dict/index.wxss */

.mode {
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
  background-color: #f4f4f5;
}

.slaveInfo {
  width: 100%;
  height: auto;
}
.slaveInfo-title{
  width: 100%;
  height: 80rpx;
  position: relative;

}
.slaveInfo-title>view:nth-child(1){
  width: 85%;
  height: 100%;
  line-height: 80rpx;
  background: #ffffff;
  clip-path: polygon(0 100%, 100% 100%, 100% 98px, 80% 0px, 0 0);
  border-radius: 12rpx 0 0 0;
  padding: 0 30rpx;
  box-sizing: border-box;

  font-size: 28rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}
.slaveInfo-title>view:nth-child(2) {
  width: 30%;
  height: 90%;
  line-height: 72rpx;
  background: #e0e0e0;
  clip-path: polygon(0 0, 100% 0, 100% 100%, 21% 100%, 0 0%);
  border-radius: 0 12rpx 12rpx 0;
  position: absolute;
  right: 0;
  top: 0;
  padding-left: 20rpx;
  box-sizing: border-box;

  font-size: 28rpx;
  color: #09090B;
  text-align: center;
}
.slaveInfo-content{
  width: 100%;
  background: #fff;
  border-radius: 0 12rpx 12rpx 12rpx;
}

.content-top{
  width: 100%;
  height: 230rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 40rpx;
}
.content-top-left{
  width: 170rpx;
  height: 100%;
}
.content-top-left>image{
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
}
.content-top-right{
  width: calc(100% - 210rpx);
  height: 100%;
}

.content-top-right-line1{
  width: 100%;
  height: 40rpx;
  display: flex;
  align-items: center;
}
.content-top-right-line1>view:nth-child(1){
  font-size: 32rpx;
  color: #09090B;
  font-weight: 600;
  margin-right: 20rpx;
}
.content-top-right-line1>view:nth-child(2){
  width: fit-content;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #71717a;
  margin-right: 10rpx;
}
.content-top-right-line1>view:nth-child(3){
  width: fit-content;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #71717a;
}

.content-top-right-line2{
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #09090B;
  gap: 10rpx;

}
.content-top-right-line2>view{
  width: calc(100% /2);
}
.content-top-right-line2>view>text{
  font-size: 28rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
  margin-left: 10rpx;
  
}


.content-bottom{
  width: 100%;
  height: 520rpx;
}
.content-bottom-line{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.content-bottom-line>view{
  width: calc(100% / 3);
  height: 110rpx;
  text-align: center;
  
}
.content-bottom-line>view>view:nth-child(1){
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #71717a;
}
.content-bottom-line>view>view:nth-child(2){
  height: 50rpx;
