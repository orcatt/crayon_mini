/* pages/today/index.wxss */


.mode {
	width: 100%;
	margin: auto;
	padding: 20rpx;
  box-sizing: border-box;
}

.container {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  /* border: 1rpx solid #09090B; */

}

.reels {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  height: 200rpx;
  position: relative;
}

.reel {
  width: 150rpx;
  height: 200rpx;
  position: relative;
  border-radius: 10rpx;
  border: 4rpx solid #ddd;
  box-sizing: border-box;
}

.reel-container {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  transform: translateY(0);
}

.reel-item {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 1;
  transition: opacity 0.5s;
}

.start-btn {
  width: 100%;
  height: 80rpx;
  background-color: #18181B;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  transition: all 0.3s;
}

.start-btn.disabled {
  opacity: 0.6;
  pointer-events: none;
}

.result {
  margin: 20rpx 0;
  text-align: center;
}

.result-text {
  font-size: 32rpx;
  color: #18181B;
  font-weight: bold;
}
