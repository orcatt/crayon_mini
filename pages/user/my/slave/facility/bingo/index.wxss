/* pages/today/index.wxss */

.mode {
	width: 100%;
	margin: auto;
	padding: 20rpx;
	box-sizing: border-box;
}

.container {
  width: 100%;
  height: 100%;
  margin: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.1);
}

.numbers-display {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  padding: 20rpx;
}

.number-row {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  flex-wrap: wrap;
}


.result {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
}

.number-ball {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}

.description {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #09090B;
  text-align: center;
}

.number-ball.red {
  background-color: #ff4d4f;
}

.number-ball.blue {
  background-color: #1890ff;
}

.result-area {
  width: 100%;
  padding: 40rpx 20rpx;
}

.result-balls {
  display: flex;
  justify-content: center;
  gap: 60rpx;
}

.big-ball {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.big-ball.red {
  background-color: #ff4d4f;
}

.big-ball.blue {
  background-color: #1890ff;
}

.controls {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 30rpx;
  box-sizing: border-box;
}

.btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #18181b;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.btn:active {
  opacity: 0.8;
}
