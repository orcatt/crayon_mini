/* pagesusertools/dict/index.wxss */
.mode{
  width: 90%;
  margin: 0 auto;
  position: relative;
}
.tabsList {
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 50rpx;
  background-color: #fff;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  margin: 40rpx auto; 
}

.tabsList>view {
  text-align: center;
  width: fit-content;
  height: 70rpx;
  line-height: 76rpx;
  font-size: 32rpx;
  font-family: "DouyinSansBold";
  color: #09090b;
  transition: all 0.3s ease;
  transform: scale(1);
}

.tabsList>view.tabs_active{
  color: #fff;
  background-color: #09090b;
  border-radius: 20rpx;
  padding: 0 20rpx;
  transform: scale(1.2);
}

.swiper-container {
  width: 100%;
  height: 100vh;
}

.swiper-container swiper-item {
  width: 100%;
  height: 100%;
  overflow: hidden;
}