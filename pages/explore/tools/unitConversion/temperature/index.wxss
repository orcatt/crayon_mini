/* pages/today/index.wxss */

.mode {
	width: 100%;
	margin: auto;
	overflow-y: auto;
  overflow-x: hidden;
}
.modetitle{
  font-family: 'DouyinSansBold';
  position: relative;
  margin: 30rpx 0 10rpx 0;
}
.modetitle .top{
  height: 65rpx;
  font-size: 48rpx;
  color: #09090B;
}
.modetitle .bottom{
  height: 50rpx;
  font-size: 32rpx;
  color: #71717A;
}
.opt image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.title-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.clear-btn {
  font-size: 24rpx;
  color: #71717A;
  padding: 8rpx 20rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-top: 10rpx;
}

.temp-container {
  display: flex;
  justify-content: space-around;
  padding: 60rpx 40rpx;
  background: #F4F4F5;
  border-radius: 24rpx;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1);
}

.temp-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
}

.temp-label {
  font-size: 32rpx;
  color: #09090B;
  font-family: 'DouyinSansBold';
  margin-bottom: 20rpx;
}

.thermometer-container {
  height: 420rpx;
  position: relative;
  margin: 20rpx 0;
}

.thermometer {
  width: 60rpx;
  height: 400rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  position: relative;
  margin: 0 auto;
  border: 4rpx solid #18181B;
}

.mercury-container {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 350rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  overflow: hidden;
}

.mercury {
  position: absolute;
  bottom: 0;
  width: 100%;
  transition: height 0.3s ease;
}

.scale {
  position: absolute;
  right: -40rpx;
  top: 50%;
  transform: translateY(-50%);
  height: 350rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.scale-mark {
  position: relative;

  width: 16rpx;
  height: 2rpx;
  background: #18181B;
}

.scale-mark text {
  position: absolute;
  right: -40rpx;
  top: -12rpx;
  font-size: 20rpx;
  color: #18181B;
}

.temp-input {
  width: 120rpx;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  text-align: center;
  font-size: 32rpx;
  color: #09090B;
  margin: 20rpx 0 10rpx;
}

.temp-unit {
  font-size: 24rpx;
  color: #71717A;
}
