/* pages/explore/tools/dict/index.wxss */
.mode {
  width: 90%;
  margin: auto;
  overflow-y: auto;
  overflow-x: hidden;
}

.modetitle {
  font-family: 'DouyinSansBold';
  position: relative;
  margin: 30rpx 0 10rpx 0;
}

.modetitle .top {
  height: 65rpx;
  font-size: 48rpx;
  color: #09090B;
}

.modetitle .bottom {
  height: 50rpx;
  font-size: 32rpx;
  color: #71717A;
}

.title-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.clear-btn {
  font-size: 24rpx;
  color: #71717A;
  padding: 8rpx 20rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-top: 10rpx;
}

.zodiac-card {
  width: 100%;
  background: #F4F4F5;
  border-radius: 24rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 2px -2rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
}

.input-row {
  margin-bottom: 20rpx;
}

.input-row:last-child {
  margin-bottom: 0;
}

.input-label {
  font-size: 32rpx;
  color: #09090B;
  margin-bottom: 16rpx;
  font-family: 'DouyinSansBold';
}

.input-field {
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #09090B;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #09090B;
}

.picker.placeholder {
  color: #71717A;
}

.result-card {
  width: 100%;
  background: #18181B;
  border-radius: 24rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 2px -2rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 40rpx;
}

.result-title {
  font-size: 32rpx;
  color: #FFFFFF;
  font-family: 'DouyinSansBold';
  margin-bottom: 20rpx;
}

.result-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-item {
  display: flex;
  align-items: center;
}

.result-item .label {
  font-size: 28rpx;
  color: #A1A1AA;
  width: 100rpx;
}

.result-item .value {
  font-size: 28rpx;
  color: #FFFFFF;
}

.years-card {
  background: #F4F4F5;
}

.years-card .result-title {
  color: #09090B;
}

.years-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.year-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.year-item .year {
  font-size: 28rpx;
  color: #09090B;
  font-family: 'DouyinSansBold';
}

.year-item .age {
  font-size: 24rpx;
  color: #71717A;
}