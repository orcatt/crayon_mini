/* pages/explore/tools/dict/index.wxss */
.mode {
  width: 90%;
  margin: auto;
  overflow-y: auto;
  overflow-x: hidden;
}

.modetitle {
  font-family: 'DouyinSansBold';
  position: relative;
  margin: 30rpx 0 10rpx 0;
}

.modetitle .top {
  height: 65rpx;
  font-size: 48rpx;
  color: #09090B;
}

.modetitle .bottom {
  height: 50rpx;
  font-size: 32rpx;
  color: #71717A;
}

.title-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.clear-btn {
  font-size: 24rpx;
  color: #71717A;
  padding: 8rpx 20rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-top: 10rpx;
}

.blood-card {
  width: 100%;
  background: #F4F4F5;
  border-radius: 24rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 2px -2rpx rgba(0, 0, 0, 0.3);
  display: flex;
  gap: 30rpx;
  justify-content: space-between;
}

.blood-row {
  width: calc(50% - 15rpx);
}

.blood-label {
  font-size: 32rpx;
  color: #09090B;
  margin-bottom: 16rpx;
  font-family: 'DouyinSansBold';
}

.blood-picker {
  height: 80rpx;
  line-height: 80rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #09090B;
}

.blood-picker.placeholder {
  color: #71717A;
}

.result-card {
  width: 100%;
  margin-top: 40rpx;
  border-radius: 24rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 2px -2rpx rgba(0, 0, 0, 0.3);
}

.result-card.possible {
  background: #18181B;
}

.result-card.impossible {
  background: #F4F4F5;
}

.result-title {
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  margin-bottom: 20rpx;
}

.possible .result-title {
  color: #FFFFFF;
}

.impossible .result-title {
  color: #09090B;
}

.result-types {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.type-tag {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.possible .type-tag {
  background: #FFFFFF;
  color: #18181B;
}

.impossible .type-tag {
  background: #FFFFFF;
  color: #71717A;
}