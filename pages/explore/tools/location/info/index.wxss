/* pages/explore/tools/location/info/index.wxss */
.mode {
  width: 100%;
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
}

.modetitle {
  font-family: 'DouyinSansBold';
  position: relative;
  margin: 10rpx 0;
}

.modetitle .top {
  height: 65rpx;
  font-size: 48rpx;
  color: #09090B;
}

.modetitle .bottom {
  height: 50rpx;
  font-size: 32rpx;
  color: #71717A;
}

.location-card {
  width: 100%;
  background: #F4F4F5;
  border-radius: 24rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 2px -2rpx rgba(0, 0, 0, 0.3);
}

.location-row {
  margin-bottom: 30rpx;
}

.location-row:last-child {
  margin-bottom: 0;
}

.location-label {
  font-size: 32rpx;
  color: #09090B;
  margin-bottom: 16rpx;
  font-family: 'DouyinSansBold';
}

.location-picker {
  height: 80rpx;
  line-height: 80rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #09090B;
}

.location-picker.placeholder {
  color: #71717A;
}

.result-card {
  width: 100%;
  margin-top: 40rpx;
  background: #18181B;
  border-radius: 24rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  color: #FFFFFF;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 2px -2rpx rgba(0, 0, 0, 0.3);
}
.result-title {
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.resultTags {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 6rpx;
  background: #FFFFFF;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 2px -2rpx rgba(0, 0, 0, 0.3);
  color: #09090B;
  font-size: 24rpx;
  text-align: center;
}

.result-content {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
}

.result-content>view {
  width: 50%;
  font-size: 28rpx;
  color: #FFFFFF;
}

.result-value {
  font-size: 32rpx;
  color: #FFFFFF;
  font-family: 'DouyinSansBold';
}

.license-card {
  width: 100%;
  margin-top: 40rpx;
  background: #F4F4F5;
  border-radius: 24rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 2px -2rpx rgba(0, 0, 0, 0.3);
}

.license-title {
  font-size: 32rpx;
  color: #09090B;
  margin-bottom: 20rpx;
  font-family: 'DouyinSansBold';
}

.license-table {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.license-row {
  display: flex;
  align-items: center;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.license-code {
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: #18181B;
  color: #FFFFFF;
  font-size: 28rpx;
  text-align: center;
  border-radius: 8rpx;
  margin-right: 20rpx;
  font-family: 'DouyinSansBold';
}

.license-area {
  flex: 1;
  font-size: 28rpx;
  color: #09090B;
}