/* pages/today/index.wxss */

.mode {
	width: 90%;
	margin: auto;
	padding: 20rpx 0;
	overflow-y: auto;
  overflow-x: hidden;
}
.modetitle{
  font-family: 'DouyinSansBold';
  position: relative;
  margin-bottom: 10rpx;
}
.modetitle .top{
  height: 65rpx;
  font-size: 48rpx;
  color: #09090B;
}
.modetitle .bottom{
  height: 50rpx;
  font-size: 32rpx;
  color: #71717A;
}
.opt image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.info{
  width: 100%;

  color: #09090b;
/*   
  padding: 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background-color: #f4f4f5; */

  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
}
.infoItem{
  width: calc(50% - 20rpx);
  height: 180rpx;
  border-radius: 24rpx;
  position: relative;
  background-color: #f4f4f5;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 2px -2rpx rgba(0, 0, 0, 0.3);

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.infoItem .title{
  position: absolute;
  left: 0;
  top: 0;
  width: fit-content;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  color: #fff;
  background-color: #18181B;
  border-top-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  text-align: center;
  font-size: 24rpx;
}
.infoItem>view:nth-child(2){
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #71717A;

}
.infoItem>view:nth-child(2)>text{
  color: #09090B;
  font-size: 48rpx;
  font-family: 'DouyinSansBold';
  margin-right: 4rpx;
}

.bmi{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  color: #09090b;

  border-radius: 24rpx;
  background-color: #f4f4f5;
  margin-top: 30rpx;
  position: relative;
}
.bmi .title{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #09090B;
  display: flex;
  justify-content: space-between;
}
.bmi .title>view:nth-child(1){
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}
.bmi .title>view:nth-child(2){
  font-size: 36rpx;
  font-family: 'DouyinSansBold';
}

.line{
  margin-top: 50rpx;
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
  text-align: center;
  gap: 4rpx;
  position: relative;
}
.line>view{
  width: 100%;
  height: 100%;
}
.line>view>view:nth-child(1){
  width: 100%;
  height: 10rpx;
  background-color: #E7E7E9;
  border-radius: 4rpx;
}
.line>view:nth-child(1)>view:nth-child(1){
  background-color: #E7E7E9;
}
.line>view:nth-child(2)>view:nth-child(1){
  background-color: #c0c0c0;
}
.line>view:nth-child(3)>view:nth-child(1){
  background-color: #696969;
}
.line>view:nth-child(4)>view:nth-child(1){
  background-color: #18181b;
}
.line>view>view:nth-child(2){
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #71717A;
}
.bmi .triangle{
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #18181b;
  position: absolute;
  top: -20rpx;
}

.weight{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  color: #09090b;

  border-radius: 24rpx;
  background-color: #f4f4f5;
  margin-top: 30rpx;
  position: relative;
}
.weight .title{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
  margin-bottom: 20rpx;
}
.weight .lineRule{
  width: 100%;
  height: 30rpx;
  background-color: #cdcdd0;
  border-radius: 12rpx;
  position: relative;
}

.lineRule>view:nth-child(1){
  position: absolute;
  left: 20rpx;
  top: 8rpx;
}
.lineRule>view:nth-child(2){
  width: fit-content;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  text-align: center;
  border-radius: 18rpx;

  font-size: 24rpx;
  color: #fff;
  background-color: #18181B;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.lineRule>view:nth-child(3){
  position: absolute;
  right: 20rpx;
  top: 8rpx;
}
.mark>view{
  position: relative;
  width: 20rpx;
  height: 50rpx;
  /* background-color: #18181b; */
}
.mark>view>view:nth-child(1){
  width: 16rpx;
  height: 16rpx;
  background-color: #18181b;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  
}
.mark>view>view:nth-child(2){
  width: 4rpx;
  height: 40rpx;
  background-color: #18181B;
  border-radius: 50%;
  position: absolute;
  top: 10rpx;
  left: 50%;
  transform: translateX(-50%);
}

.trend{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;

  font-size: 24rpx;
  color: #71717A;
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}

.trend>view>text{
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
  margin-left: 16rpx;
}

.chart {
  width: 100%;
  height: 300rpx;
  margin-top: 30rpx;
  position: relative;
  user-select: none;
}

.weight-chart {
  width: 100%;
  height: 100%;
}

.tooltip {
  position: absolute;
  transform: translate(-50%, -100%);
  background-color: #18181B;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  pointer-events: none;
  z-index: 10;
}

.tooltip::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #18181B;
}

.tooltip-date {
  font-size: 24rpx;
  color: #CDCDD0;
  text-align: center;
}

.tooltip-weight {
  font-size: 28rpx;
  color: #FFFFFF;
  font-family: 'DouyinSansBold';
  text-align: center;
  margin-top: 4rpx;
}

.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
}

.drawer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 501;
  max-height: 90vh;
  overflow-y: auto;
}

.drawer.drawer-show {
  transform: translateY(0);
}

.drawer-header {
  padding: 32rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: none;
}

.drawer-title {
  color: #09090B;
  font-size: 36rpx;
  font-family: 'DouyinSansBold';
}

.drawer-close {
  font-size: 36rpx;
  color: #71717A;
  padding: 0 20rpx;
}

.drawer-content {
  padding: 40rpx;
}

.form-group {
  width: 100%;
}

.account-group {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  margin-top: 30rpx;
}

.account-item {
  flex: 1;
}
.account-title {
  font-size: 32rpx;
  color: #09090B;
  margin-bottom: 12rpx;
  margin-top: 30rpx;
}

.account-title:first-child {
  margin-top: 0;
}

.required {
  color: #ff4d4f;
  margin-left: 8rpx;
}

.account-input {
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1rpx solid #71717A;
}

.account-input input,
.account-input picker {
  height: 100%;
  width: 100%;
}

.textarea-container {
  height: 120rpx;
  padding: 10rpx 0;
}

.textarea-container textarea {
  width: 100%;
  height: 100%;
}

.placeholderClass {
  color: #71717A;
  font-size: 28rpx;
}

.btn-group {
  margin-top: 60rpx;
}

.wx-login-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center; 
  border-radius: 12rpx;
  background: #18181B;
  color: #fff;
  font-size: 28rpx;
}
.otherlogin {
  color: #71717A;
  font-size: 28rpx;
  text-align: right;
  margin-top: 24rpx;
}
