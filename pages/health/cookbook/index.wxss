/* pages/health/cookbook/index.wxss */

.mode {
	width: 90%;
	margin: auto;
	padding: 20rpx 0;
	overflow-y: auto;
  overflow-x: hidden;
}
.modetitle{
  font-family: 'DouyinSansBold';
  position: relative;
  margin-bottom: 10rpx;
}
.modetitle .top{
  height: 65rpx;
  font-size: 48rpx;
  color: #09090B;
}
.modetitle .bottom{
  height: 50rpx;
  font-size: 32rpx;
  color: #71717A;
}
.opt image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

/* 新增瀑布流样式 */
.recipes {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx 0;
  gap: 20rpx;
}

.recipesItem {
  width: calc(50% - 20rpx);
  margin-bottom: 20rpx;
  border-radius: 24rpx;
  background-color: #f4f4f5;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 2px -2rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
  padding-bottom: 14rpx;
}

.recipesItem > view:first-child {
  width: 100%;
  height: 280rpx;
  overflow: hidden;
}

.recipesItem image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.recipesItem > view:nth-child(2) {
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #09090B;
  font-weight: bold;
}
.recipesItem .tags{
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin: 0 10rpx 10rpx 20rpx;
}
.tags > view {
  display: inline-block;
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  color: #71717A;
  background-color: #ffffff;
  border-radius: 10rpx;
}

/* 抽屉样式 */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
}

.drawer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 501;
  max-height: 90vh;
  overflow-y: auto;
}

.drawer.drawer-show {
  transform: translateY(0);
}

.drawer-header {
  padding: 32rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: none;
}

.drawer-title {
  color: #09090B;
  font-size: 36rpx;
  font-family: 'DouyinSansBold';
}

.drawer-close {
  font-size: 36rpx;
  color: #71717A;
  padding: 0 20rpx;
}

.drawer-content {
  padding: 40rpx;
}

.form-group {
  width: 100%;
}

.account-title {
  font-size: 32rpx;
  color: #09090B;
  margin-bottom: 12rpx;
  margin-top: 30rpx;
}

.account-title:first-child {
  margin-top: 0;
}

.required {
  color: #ff4d4f;
  margin-left: 8rpx;
}

.account-input {
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1rpx solid #71717A;
}

.account-input input {
  height: 100%;
  width: 100%;
}

.placeholderClass {
  color: #71717A;
  font-size: 28rpx;
}

.rating-container {
  margin: 20rpx 0;
  display: flex;
  gap: 30rpx;
}

.star {
  font-size: 48rpx;
  color: #ddd;
}

.star.active {
  color: #ffd700;
}

.switch-container {
  margin: 20rpx 0;
}

.btn-group {
  margin-top: 60rpx;
}

.wx-login-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center; 
  border-radius: 12rpx;
  background: #18181B;
  color: #fff;
  font-size: 28rpx;
}

.otherlogin {
  color: #71717A;
  font-size: 28rpx;
  text-align: right;
  margin-top: 24rpx;
}

/* 添加标签相关样式 */
.tag-input-container {
  margin: 20rpx 0 30rpx;
}

.tag-input {
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1rpx solid #71717A;
}

.tag-input input {
  height: 100%;
  width: 100%;
}

.tags-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 20rpx;
}

.tag-item {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: #71717A;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, 0.1);
}

.delete-tag {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #999;
}

/* 添加食材相关样式 */
.ingredients-list {
  margin: 20rpx 0;
}

.ingredient-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background: #f4f4f5;
  padding: 20rpx;
  border-radius: 12rpx;
}

.ingredient-content {
  flex: 1;
}

.ingredient-row {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.ingredient-input {
  flex: 1;
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1rpx solid #71717A;
}

.ingredient-unit {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1rpx solid #71717A;
}

.delete-ingredient {
  padding: 0 20rpx;
  color: #ff4d4f;
  font-size: 40rpx;
}

.add-ingredient {
  margin-top: 30rpx;
  padding: 20rpx;
  text-align: center;
  color: #3b82f6;
  font-size: 28rpx;
  background: #f4f4f5;
  border-radius: 12rpx;
}

/* 添加步骤相关样式 */
.steps-list {
  margin: 20rpx 0;
}

.step-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  background: #f4f4f5;
  padding: 20rpx;
  border-radius: 12rpx;
}

.step-content {
  flex: 1;
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #18181B;
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
}

.step-input {
  flex: 1;
  min-height: 50rpx;
  border-bottom: 1rpx solid #71717A;
}

.step-input input {
  width: 100%;
  height: 100%;
}

.delete-step {
  padding: 0 20rpx;
  color: #ff4d4f;
  font-size: 40rpx;
}

.add-step {
  margin-top: 30rpx;
  padding: 20rpx;
  text-align: center;
  color: #3b82f6;
  font-size: 28rpx;
  background: #f4f4f5;
  border-radius: 12rpx;
}

/* 添加菜谱详情样式 */
.recipe-detail {
  height: 100%;
  background: #fff;
}

.recipe-image {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.recipe-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.edit-detail {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  color: #fff;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
}

.close-detail {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 54rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  font-size: 40rpx;
}

.detail-content {
  padding: 40rpx;
}

.recipe-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.recipe-name {
  font-size: 40rpx;
  color: #09090B;
  font-weight: bold;
  font-family: 'DouyinSansBold';
}

.recipe-rating {
  display: flex;
  gap: 10rpx;
}

.recipe-rating .star {
  font-size: 32rpx;
  color: #ddd;
}

.recipe-rating .star.active {
  color: #ffd700;
}

.recipe-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.recipe-tags .tag {
  padding: 8rpx 24rpx;
  font-size: 24rpx;
  color: #71717A;
  background: #f4f4f5;
  border-radius: 10rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #09090B;
  font-weight: bold;
  margin-bottom: 20rpx;
  font-family: 'DouyinSansBold';
}

.ingredients-detail {
  background: #f4f4f5;
  border-radius: 12rpx;
  padding: 10rpx 20rpx 4rpx 20rpx;
}

.ingredient-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #09090B;
  border-bottom: 1rpx solid #e5e5e5;
}

.ingredient-row:last-child {
  border-bottom: none;
}

.ingredient-amount {
  color: #71717A;
}

.steps-detail {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.step-row {
  display: flex;
  gap: 20rpx;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #18181B;
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
  font-size: 28rpx;
  color: #09090B;
}

.step-content image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  margin-top: 16rpx;
  object-fit: cover;
}

/* 添加图片上传相关样式 */
.upload-container {
  margin: 20rpx 0 30rpx;
}

.upload-box {
  width: 200rpx;
  height: 200rpx;
  background: #f4f4f5;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #71717A;
}

.preview-box {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-image {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  font-size: 32rpx;
}
