/* pages/today/index.wxss */

.tabs {
  width: 100%;
  height: 100%;
  line-height: 60rpx;
  display: flex;
  padding-left: 5%;
  box-sizing: border-box;
}

.tabs>view {
  color: #666;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  width: fit-content;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.activeTabs {
  color: #000;
  font-size: 36rpx;
  font-weight: 600;
  position: relative;
}

.activeTabs::after {
  content: '';
  width: 30rpx;
  height: 6rpx;
  border-radius: 8rpx;
  background-color: #ff7777;
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
}






.login-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.5);
  z-index: 999;
  backdrop-filter: blur(4rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-modal {
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, .1), 
              0 2rpx 2px -2rpx rgba(0, 0, 0, .3);
}

.login-content {
  padding: 48rpx;
  box-sizing: border-box;
}

.login-content .title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  margin-bottom: 24rpx;
}

.login-content .desc {
  font-size: 28rpx;
  color: #71717A;
  text-align: center;
  margin-bottom: 48rpx;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.btn.cancel {
  background: #f4f4f5;
  color: #080808;
}

.btn.confirm {
  background: #080808;
  color: #fff;
}

.swiper-container {
  width: 100%;
  height: 100vh;
}

.swiper-container swiper-item {
  width: 100%;
  height: 100%;
  overflow: hidden;
}