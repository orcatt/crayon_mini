/* pages/explore/tools/dict/index.wxss */
page{
  background-color: #f4f4f5;
}
.mode {
	width: 90%;
	margin: auto;
	overflow-y: auto;
  overflow-x: hidden;
}

.fund-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.fund-name {
  font-size: 36rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}
.fund-name text {
  font-size: 24rpx;
  color: #71717a;
  margin-left: 8rpx;
}
.month-picker {
  background: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
}

.picker-content {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #09090B;
}

.picker-content image {
  width: 24rpx;
  height: 24rpx;
}




.record {
  width: 100%;
  box-sizing: border-box;
}

.recordItem-wrapper {
  width: 100%;
  height: 148rpx;
  position: relative;
  margin-bottom: 30rpx;
}

.recordItem-content {
  /* 应该260,留出4rpx阴影面积 */
  width: calc(100% + 128rpx);
  height: 100%;
  display: flex;
  padding-right: 4rpx;
}

.recordItem {
  width: 100%;
  height: 148rpx;
  color: #09090B;
  padding: 32rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
  background: #ffffff;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}


.record-left {
  display: flex;
  gap: 8rpx;
}

.transaction-type {
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
}

.transaction-date {
  color: #09090B;
  font-size: 28rpx;
  font-family: 'DouyinSansBold';
}

.record-right {
  text-align: right;
}

.amount {
  font-size: 36rpx;
  font-family: 'DouyinSansBold';
  margin-bottom: 8rpx;
}

.profit {
  color: #ef4444;
}

.loss {
  color: #22c55e;
}

.percentage {
  font-size: 28rpx;
  font-family: 'DouyinSansBold';
}
.details {
  font-size: 24rpx;
  color: #71717a;
}

.separator {
  margin: 0 8rpx;
}


.recordItem-buttons {
  height: 100%;
  display: flex;
  font-family: 'DouyinSansBold';
}

.recordItem-delete {
  width: 120rpx;
  height: 100%;
  margin-left: 10rpx;
  background: #ef4444;
  color: #fff;
  font-size: 28rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, .2), 
  0 2rpx 2px -2rpx rgba(0, 0, 0, .4);
}
