/* pages/explore/tools/dict/index.wxss */
page{
  background-color: #f4f4f5;
}
.mode {
	width: 90%;
	margin: auto;
	overflow-y: auto;
  overflow-x: hidden;
}

.fund-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.fund-name {
  font-size: 36rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}
.fund-name text {
  font-size: 24rpx;
  color: #71717a;
  margin-left: 8rpx;
}
.month-picker {
  background: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
}

.picker-content {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #09090B;
}

.picker-content image {
  width: 24rpx;
  height: 24rpx;
}




.record {
  width: 100%;
  box-sizing: border-box;
}

.recordItem-wrapper {
  width: 100%;
  height: 148rpx;
  position: relative;
  margin-bottom: 30rpx;
}

.recordItem-content {
  /* 应该260,留出4rpx阴影面积 */
  width: calc(100% + 128rpx);
  height: 100%;
  display: flex;
  padding-right: 4rpx;
}

.recordItem {
  width: 100%;
  height: 148rpx;
  color: #09090B;
  padding: 32rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
  background: #ffffff;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}


.record-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.transaction-type {
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
}

.transaction-type.buy {
  color: #ef4444;
}

.transaction-type.sell {
  color: #22c55e;
}

.transaction-date {
  font-size: 24rpx;
  color: #71717a;
}

.record-right {
  text-align: right;
}

.amount {
  font-size: 36rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
  margin-bottom: 8rpx;
}

.details {
  font-size: 24rpx;
  color: #71717a;
}

.separator {
  margin: 0 8rpx;
}


.recordItem-buttons {
  height: 100%;
  display: flex;
  font-family: 'DouyinSansBold';
}

.recordItem-delete {
  width: 120rpx;
  height: 100%;
  margin-left: 10rpx;
  background: #ef4444;
  color: #fff;
  font-size: 28rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, .2), 
  0 2rpx 2px -2rpx rgba(0, 0, 0, .4);
}


.add-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #18181b;
  color: #ffffff;
  border-radius: 12rpx;
}

.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
}

.drawer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 501;
  max-height: 90vh;
  overflow-y: auto;
}

.drawer.drawer-show {
  transform: translateY(0);
}

.drawer-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f4f4f5;
}

.drawer-title {
  font-size: 36rpx;
  color: #09090B;
  font-weight: 600;
}

.drawer-close {
  font-size: 40rpx;
  color: #71717a;
  padding: 0 20rpx;
}

.drawer-content {
  padding: 32rpx;
}

.form-group {
  width: 100%;
}

.form-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.form-item {
  flex: 1;
}

.account-title {
  font-size: 28rpx;
  color: #09090B;
  margin-bottom: 12rpx;
}

.required {
  color: #ef4444;
  margin-left: 4rpx;
}

.account-input {
  height: 80rpx;
  padding: 0 24rpx;
  background: #f4f4f5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}

.account-input input {
  height: 100%;
  width: 100%;
  font-size: 28rpx;
}

.btn-group {
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.wx-login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #18181b;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 32rpx;
}

.otherlogin {
  color: #71717a;
  font-size: 28rpx;
  text-align: right;
}

.placeholderClass {
  color: #71717a;
  font-size: 28rpx;
}

.account-input picker {
  width: 100%;
  height: 100%;
}

.account-input picker view {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

/* 禁用输入框样式 */
.account-input input:disabled {
  color: #71717a;
}