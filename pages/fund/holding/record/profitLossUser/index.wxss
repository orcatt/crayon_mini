page{
  background-color: #f4f4f5;
}
.mode {
	width: 90%;
	margin: auto;
}

.fund-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.fund-name {
  font-size: 36rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}
.month-picker {
  background: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
