  font-family: 'DouyinSansBold';
  color: #09090B;

}
.profit-info-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;

}

.profit-info-bottom-item{
  width: 160rpx;
  text-align: right;
}
.profit-info-bottom-item-title {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #71717a;
}

.profit-info-bottom-item-amount {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}





.calendar {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 0 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.calendar-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  padding: 16rpx 0 12rpx 0; 
  color: #09090B;
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  border-bottom: 2rpx solid #f4f4f5;
}

.weekday {
  font-size: 28rpx;
  color: #71717a;
  height: 60rpx;
  line-height: 60rpx;
}

.calendar-body {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
  padding: 8rpx 0;
}

.calendar-day {
  aspect-ratio: 1;
  background: #f4f4f5;
  border-radius: 8rpx;
  position: relative;
  transition: all 0.2s ease;
}

.calendar-day.empty {
  background: transparent;
}

.calendar-day.today {
  background-color: #e4e4e7;

}

/* 添加选中状态样式 */
.calendar-day.selected {
  background-color: #fafafa;
  box-shadow: 0 0rpx 12rpx rgba(0, 0, 0, 0.2);
	animation: pulse 5s infinite;

}
@keyframes pulse {
	0% {
		transform: scale(1);

	}
	50% {
		transform: scale(1.1);

	}
	100% {
		transform: scale(1);

	}
}

/* 同时选中且是今天的样式 */
.calendar-day.today.selected {
  background-color: #e4e4e7;
}

.day-number {
  font-size: 28rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  margin: 10rpx 0 2rpx 0;
}


.day-amount {
  font-size: 24rpx;
  font-family: 'DouyinSansBold';
  margin-bottom: 4rpx;
  text-align: center;

}

.profit {
  color: #ef4444;
}
.loss {
  color: #22c55e;
}
.equal {
  color: #71717a;
}

.calendar-day.profit {
  background: rgba(239, 68, 68, 0.1);
}

.calendar-day.loss {
  background: rgba(34, 197, 94, 0.1);
}



