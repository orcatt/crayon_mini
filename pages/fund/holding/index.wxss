.operation-steps-title {
  font-size: 32rpx;
  color: #09090B;
  font-family: 'DouyinSansBold';
  margin-bottom: 32rpx;
  text-align: center;
}

.step {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f4f4f5;
}

.step:last-child {
  border-bottom: none;
}

.step-title {
  width: 120rpx;
  font-size: 28rpx;
  color: #18181b;
  font-family: 'DouyinSansBold';
  padding: 8rpx 16rpx;
  background: #f4f4f5;
  border-radius: 8rpx;
  text-align: center;
  margin-right: 24rpx;
}

.step-content {
  flex: 1;
}

.step-content-title {
  font-size: 32rpx;
  color: #18181b;
  font-family: 'DouyinSansBold';
  margin-bottom: 8rpx;
}

.step-content-desc {
  font-size: 26rpx;
  color: #71717a;
