/* pages/today/index.wxss */
.mode {
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
  background-color: #f4f4f5;
  overflow-y: auto;
}

.holdingInfo {
  width: 100%;
  height: auto;
}

.holdingInfo-title{
  width: 100%;
  height: 80rpx;
  position: relative;
}

.holdingInfo-title>view:nth-child(1){
  width: 85%;
  height: 100%;
  line-height: 80rpx;
  background: #ffffff;
  clip-path: polygon(0 100%, 100% 100%, 100% 98px, 80% 0px, 0 0);
  border-radius: 8rpx 0 0 0;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}

.holdingInfo-title>view:nth-child(2) {
  width: 30%;
  height: 90%;
  line-height: 72rpx;
  background: #e0e0e0;
  clip-path: polygon(0 0, 100% 0, 100% 100%, 21% 100%, 0 0%);
  border-radius: 0 8rpx 8rpx 0;
  position: absolute;
  right: 0;
  top: 0;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #09090B;
  text-align: center;
}

.holdingInfo-content{
  width: 100%;
  background: #fff;
  border-radius: 0 8rpx 8rpx 8rpx;
  padding: 32rpx;
  box-sizing: border-box;
}

.content-top{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.content-top-left {
  flex: 1;
  font-size: 60rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}



.content-top-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.content-top-right>view:nth-child(1){
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #71717a;
}
.content-top-right>view:nth-child(2){
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}


.content-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content-bottom>view>view:first-child {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #71717a;
}

.content-bottom>view>view:last-child {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}

.content-bottom>view>view:last-child text {
  font-family: 'DouyinSansBold';
  margin-right: 4rpx;
}


.content-process {
  width: 100%;
  margin-top: 30rpx;
}

.process-bar {
  width: 100%;
  height: 12rpx;
  background: #f4f4f5;
  border-radius: 999rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.process-bar-inner {
  height: 100%;
  background: linear-gradient(90deg, #18181b 0%, #27272a 100%);
  border-radius: 999rpx;
  transition: width 0.3s ease;
}

.process-text {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #71717a;
}

.process-text text:last-child {
  font-family: 'DouyinSansBold';
  color: #18181b;
}

.profit {
  color: #ef4444 !important;
}

.loss {
  color: #22c55e !important;
}


/* 持仓列表 */
.holding-list {
  width: 100%;
  margin-top: 32rpx;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.list-header {
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f4f4f5;
  margin-bottom: 24rpx;
}

.list-header>view {
  font-size: 28rpx;
  color: #71717a;
}

.list-header>view:nth-child(2){
  font-size: 24rpx;
  font-family: 'DouyinSansBold';
  margin-top: 2rpx;
}

.list-sort{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.list-sort>view{
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8rpx;
}

.list-sort>view>view:nth-child(1){
  font-size: 24rpx;
  color: #71717a;
}

.list-sort>view>view:nth-child(2){
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.list-sort>view>view:nth-child(2)>image{
  width: 18rpx;
  height: 18rpx;
}

.list-sort>view>view:nth-child(2)>image:nth-child(1){
  margin-bottom: -4rpx;
}

.list-sort>view>view:nth-child(2)>image:nth-child(2){
  margin-top: -2rpx;
}


.list-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.list-item {
  padding: 30rpx;
  box-sizing: border-box;
  background: #f4f4f5;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}
.item-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-item:active {
  background: #e4e4e7;
}

.item-left {
  flex: 1;
  height: 80rpx;
  margin-right: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.fund-name {
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
  
  margin-bottom: 4rpx;
  /* 超出部分显示省略号 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 400rpx;
}

.fund-code {
  font-size: 24rpx;
  color: #71717a;
}

.item-right {
  display: flex;
  height: 80rpx;
}

.profit-amount {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 48rpx;
  font-family: 'DouyinSansBold';
  margin-bottom: 4rpx;
}

.profit-rate {
  height: 80rpx;
  line-height: 94rpx;

  font-size: 28rpx;
  font-family: 'DouyinSansBold';
}

.bottom-info-record{
  width: 100%;
  height: 220rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;

  /* background-color: #fff; */
}
.holding-info{
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.holding-info>view{
  width: 100%;
  height: 50%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  
}
.holding-info>view>view{
  width: calc(100% / 2);
  height: 100%;
}
.holding-info>view>view>view:nth-child(1){
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #71717a;
}
.holding-info>view>view>view:nth-child(2){
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}


.record{
  width: 30%;
  height: 200rpx;

  color: #09090B;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 24rpx;
  position: relative;

  box-shadow: 0 0rpx 4rpx rgba(0, 0, 0, 0.2);
}
.record>view{
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 28rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
  text-align: center;
}

.record>image{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0rpx;
  width: 135rpx;
  height: 135rpx;
}


.item-bottom{
  width: 100%;
  margin: 20rpx 0;
}

.item-bottom-line{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 0 30rpx 0;
}
.item-bottom-line>view{
  width: calc(100% / 3);
  height: 100rpx;
}
.item-bottom-line>view:nth-child(2){
  text-align: center;
}
.item-bottom-line>view:nth-child(3){
  text-align: right;
}
.item-bottom-line>view>view:nth-child(1){
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #71717a;
}
.item-bottom-line>view>view:nth-child(2){
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}

.item-composite{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
  margin: 15px 0 10px 0;

}
.item-process{
  width: 60% ;
}
.process-block{
  height: 40rpx;
  width: 100%;
  background: #fff;
  box-shadow: inset 0 0 4rpx #E4E4E7;
  border-radius: 10rpx;
  overflow: hidden;
}
.process-block-inner{
  height: 100%;
  background: linear-gradient(90deg, #18181b 0%, #27272a 100%);
  border-radius: 10rpx;
  transition: width 0.3s ease;
}
.item-composite>view:nth-child(2){
  width: 40%;
  height: 100%;
  line-height: 80rpx;
  background: #ffffff;
  box-shadow: inset 0 0 4rpx #E4E4E7;
  color: #09090B;
  font-size: 28rpx;
  border-radius: 12rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
.item-composite>view:nth-child(2)>image{
  width: 34rpx;
  height: 34rpx;
  vertical-align: sub;
}

.item-bottom-btn{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  margin: 0 auto;
  gap: 20rpx;
}
.item-bottom-btn>view:nth-child(1){
  width: 30%;
  height: 100%;
  background: #18181b;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 12rpx;

}
.item-bottom-btn>view:nth-child(2){
  width: 30%;
  height: 100%;
  background: #ffffff;
  color: #09090B;
  font-size: 28rpx;
  border-radius: 12rpx;
  box-shadow: inset 0 0 4rpx #E4E4E7;
}
.item-bottom-btn>view:nth-child(3){
  width: 20%;
  height: 100%;
  background: #e0e0e0;
  color: #09090B;
  font-size: 28rpx;
  border-radius: 12rpx;
}
.item-bottom-btn>view:nth-child(4){
  width: 20%;
  height: 100%;
  background: #ef4444;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 12rpx;
  
}


/* 缩略显示 */
.omit-top{
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.omit-right {
  display: flex;
  height: 50rpx;
}

.omit-amount {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 40rpx;
  font-family: 'DouyinSansBold';
  margin-bottom: 4rpx;
}

.omit-rate {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  font-family: 'DouyinSansBold';
}

.omit-bottom{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.omit-bottom-line{
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;

}
.omit-bottom-line>view{
  /* width: calc(100% / 3); */
  height: 90rpx;
  text-align: center;

}
.omit-bottom-line>view:nth-child(2){
  width: 40%;
  border-left: 2rpx solid #e0e0e0;
  border-right: 2rpx solid #e0e0e0;
}
.omit-bottom-line>view>view:nth-child(1){
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #71717a;
}
.omit-bottom-line>view>view:nth-child(2){
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  font-family: 'DouyinSansBold';
  color: #09090B;
}


/* 新增弹窗样式 */

.add-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #18181b;
  color: #ffffff;
  border-radius: 12rpx;
}

.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
}

.drawer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 501;
  max-height: 90vh;
  overflow-y: auto;
}

.drawer.drawer-show {
  transform: translateY(0);
}

.drawer-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f4f4f5;
}

.drawer-title {
  font-size: 36rpx;
  color: #09090B;
  font-weight: 600;
}

.drawer-close {
  font-size: 40rpx;
  color: #71717a;
  padding: 0 20rpx;
}

.drawer-content {
  padding: 32rpx;
}

.form-group {
  width: 100%;
}

.form-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.form-item {
  flex: 1;
}

.account-title {
  font-size: 28rpx;
  color: #09090B;
  margin-bottom: 12rpx;
}

.required {
  color: #ef4444;
  margin-left: 4rpx;
}

.account-input {
  height: 80rpx;
  padding: 0 24rpx;
  background: #f4f4f5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}

.account-input input {
  height: 100%;
  width: 100%;
  font-size: 28rpx;
}

.btn-group {
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.wx-login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #18181b;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 32rpx;
}

.otherlogin {
  color: #71717a;
  font-size: 28rpx;
  text-align: right;
}

.placeholderClass {
  color: #71717a;
  font-size: 28rpx;
}

.account-input picker {
  width: 100%;
  height: 100%;
}

.account-input picker view {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

/* 禁用输入框样式 */
.account-input input:disabled {
  color: #71717a;
}

.profit-switch {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}

.switch-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
}

.switch-item>view{
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
}

.profit-switch>view:nth-child(1) .active {
  background: #ef4444 ;
  color: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);

}
.profit-switch>view:nth-child(2) .active {
  background: #22c55e ;
  color: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);

}

.operation-steps {
  width: 100%;
