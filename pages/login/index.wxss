/* pages/login/index.wxss */
.poetry-container {
  width: 100%;
  height: 850rpx;
  display: flex;
  padding: 60rpx;
  box-sizing: border-box;
}

.line {
  color: #09090B;
  opacity: 0;
  transform: translateY(20rpx);
}


.line.second {
  margin-left: 24rpx;
}

.line.show {
  opacity: 1;
  transform: translateY(0);
  transition: all 0.8s ease;
}

.line>view {
  width: 120rpx;
  font-size: 60rpx;
  writing-mode: vertical-rl;
  letter-spacing: 20rpx;
	line-height: 2;
	font-family: 'DouyinSansBold';
}
.loginBtnSum {
  width: 80%;
  margin: 150rpx auto;
}
.wx-login-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center; 
  border-radius: 12rpx;
  background: #080808;
  color: #fff;
  font-size: 28rpx;
}
.otherlogin{
	color: #71717A;
  font-size: 28rpx;
  text-align: right;
  margin-top: 24rpx;
}


.account {
  width: 80%;
  margin: 0 auto;
}
.account-title {
  font-size: 32rpx;
  color: #080808;
  margin-bottom: 12rpx;
}
.account-input {
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1rpx solid #71717A;
}
.placeholderClass {
  color: #71717A;
  font-size: 28rpx;
}