/**app.wxss**/
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
} 
.modal{
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 48rpx;
  box-sizing: border-box;
  box-shadow: 0 0px 6rpx 0 rgba(0, 0, 0, .1), 
              0 2rpx 2px -2rpx rgba(0, 0, 0, .3);
        
}
.modal .title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  margin-bottom: 24rpx;
}
.modal .desc {
  font-size: 28rpx;
  color: #71717A;
  text-align: center;
  margin-bottom: 48rpx;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.btn.cancel {
  background: #f4f4f5;
  color: #09090B;
}

.btn.confirm {
  background: #18181B;
  color: #fff;
}