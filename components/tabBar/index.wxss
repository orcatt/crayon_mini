.tabbar {
  width: 100%;
  height: 170rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  z-index: 499;
	box-shadow: 0rpx -2rpx 4rpx 0rpx rgba(0,0,0,0.1);
	padding: 0 30rpx;
	box-sizing: border-box;
}

.tabbarList {
  width: 15%;
  position: relative;
  margin-top: 30rpx;

}
.tabbarList>view{
  width: 100rpx;
  height: 150rpx;

  position: relative;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}
.tabbarList>view>image {
  width: 60rpx;
  height: 60rpx;
}
.Tabberactive>image{
	animation: pulse 5s infinite;

}
